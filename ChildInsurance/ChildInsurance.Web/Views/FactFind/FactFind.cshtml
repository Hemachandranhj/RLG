@model ChildInsurance.Web.Models.FactFindViewModel

@using (Html.BeginForm("SubmitPlan", "FinancialPlanning", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

<h2>FinancialPlanning</h2>
<div class="row">
    <div class="form-group">
        @Html.Label("Asset", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Asset, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Liablity", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Liablity, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Income", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Income, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Expenditure", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Expenditure, new { @class = "form-control" })
        </div>
    </div>
    </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="SubmitPlan" />
                </div>
            </div>            
        </div>
}
