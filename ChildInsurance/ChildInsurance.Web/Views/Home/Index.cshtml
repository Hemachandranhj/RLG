    </ul>

    <!-- side nav end-->
    <!-- card -->

    <div class="row">
        <div class="col s10 m10 l7 offset-l4 offset-s1 offset-m1">

            <div class="card grey lighten-5 black-text hoverable">
                <div class="card-content  cyan darken-2 white-text">
                    <span class="card-title">Status of Recommendation</span>
                </div>
                <div class="card-content ">
                    <div class="row">
                        <div id="eventchart" style="height: 300px; width: 100%;"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s10 m10 l7 offset-l4 offset-s1 offset-m1">

                <div class="card grey lighten-5 black-text hoverable">
                    <div class="card-content  cyan darken-2 white-text">
                        <span class="card-title">Event Scheduled for various Interest</span>
                    </div>
                    <div class="card-content ">
                        <div class="row">
                            <div id="interestchart" style="height: 300px; width: 100%;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
            <script src="../../bundles/js/materialize.min.js"></script>
            <script type="text/javascript">
        window.onload = function () {
            var data;
            var insurerChartData;
            var insurereventChartData;
            $.ajax({
                type: 'GET',
                url: "../../bundles/js/InsurerChartData.json",
                data: data,
                async: false,
                beforeSend: function (xhr) {
                    if (xhr && xhr.overrideMimeType) {
                        xhr.overrideMimeType('application/json;charset=utf-8');
                    }
                },
                dataType: 'json',
                success: function (data) {
                    insurerChartData = data;

                }
            });

            $.ajax({
                type: 'GET',
                url: "../../bundles/js/InsurerChartEventData.json",
                data: data,
                async: false,
                beforeSend: function (xhr) {
                    if (xhr && xhr.overrideMimeType) {
                        xhr.overrideMimeType('application/json;charset=utf-8');
                    }
                },
                dataType: 'json',
                success: function (data) {
                    insurereventChartData = data;

                }
            });


            var event = new CanvasJS.Chart("eventchart", {
                theme: "theme3",
                backgroundColor: "#fafafa",
                legend: {
                    maxWidth: 200,
                    itemWidth: 60
                },
                data: [{
                    type: "pie",
                    showInLegend: true,
                    legendText: "{indexLabel}",
                    dataPoints: insurereventChartData
                }]
            });
            event.render();
            var interest = new CanvasJS.Chart("interestchart", {
                theme: "theme3",
                backgroundColor: "#fafafa",
                legend: {
                    maxWidth: 200,
                    itemWidth: 60
                },
                data: [{
                    type: "pie",
                    showInLegend: true,
                    legendText: "{indexLabel}",
                    dataPoints: insurerChartData
                }]
            });
            interest.render();
        }
            </script>
            <script type="text/javascript" src="../../bundles/js/canvasjs.min.js"></script>
            <script type="text/javascript">
        $('.button-collapse').sideNav();
            </script>
</body>
</html>
